# Environment Configuration
DEBUG=True
SECRET_KEY=django-insecure-lca-tool-secret-key-for-development-only

# Database Configuration (SQLite for quick start)
DATABASE_URL=sqlite:///./db.sqlite3

# OpenLCA Configuration
OPENLCA_HOST=localhost
OPENLCA_PORT=8080

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
ML_MODEL_PATH=./models/
ENABLE_AI_FEATURES=True

# External API Keys
ECOINVENT_API_KEY=your-ecoinvent-key
OPENAI_API_KEY=your-openai-key

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=csv,xlsx,json,xml
